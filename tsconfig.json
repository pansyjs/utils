{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "declaration": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  }
}
